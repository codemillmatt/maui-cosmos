<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CosmosPizza.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CosmosPizza.MAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Menu">
            <ShellContent
                Title="Menu"
                ContentTemplate="{DataTemplate local:MenuPage}"
                Route="MenuPage" />
        </Tab>
        <Tab Title="Orders">
            <ShellContent
                Title="Orders"
                ContentTemplate="{DataTemplate local:OrdersPage}"
                Route="OrdersPage"/>
        </Tab>
    </TabBar>    
</Shell>

